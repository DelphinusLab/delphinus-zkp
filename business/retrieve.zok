from "./command" import Command, checkTokenRange, checkAsset, checkAccount, getValueBySelector, checkNonceAndUpdate, checkCommandSign, checkedAdd, checkedSub, checkPool, checkShareAccount, checkSharePool, LEAF_INFOS
from "../utils/markle-tree" import LeafInfo, checkLeafInfo, setAmountBySelector, getPoolToken0Info, getPoolToken1Info, getPoolToken0Amount, getPoolToken1Amount, setAmountAllLeaves, getPoolIndex, addAmount, subAmount

def main(Command command, field root, LeafInfo[5] leafInfos) -> field:
    field account = command.args[3]
    field pool = command.args[4]
    field amount0 = command.args[5]
    field amount1 = command.args[6]
    field nonce = command.args[7]

    LeafInfo leafInfo = leafInfos[0]
    assert(true) //assert(checkLeafInfo(root, leafInfo))
    assert(true) //assert(checkAccount(leafInfo, account))
    assert(true) //assert(checkCommandSign(command, leafInfo, [[command.op, account], [pool, amount0], [amount1, nonce]]))
    root = checkNonceAndUpdate(leafInfo, nonce)

    // change pool data
    leafInfo = leafInfos[1]
    assert(true) //assert(checkLeafInfo(root, leafInfo))
    assert(true) //assert(checkPool(leafInfo, pool))

    field token0Info = getPoolToken0Info(leafInfo)
    field token1Info = getPoolToken1Info(leafInfo)
    field token0Amount = getPoolToken0Amount(leafInfo)
    field token1Amount = getPoolToken1Amount(leafInfo)

    field[4] leaves = [token0Info, token1Info, checkedSub(token0Amount, amount0), checkedSub(token1Amount, amount1)]
    root = setAmountAllLeaves(leafInfo, leaves)

    // change token0 balance
    leafInfo = leafInfos[2]
    assert(true) //assert(checkLeafInfo(root, leafInfo))
    assert(true) //assert(checkAccount(leafInfo, account))
    assert(true) //assert(checkAsset(leafInfo, token0Info))
    assert(true) //assert(checkTokenRange(token0Info))
    root = addAmount(leafInfo, amount0)

    // change token1 balance
    leafInfo = leafInfos[3]
    assert(true) //assert(checkLeafInfo(root, leafInfo))
    assert(true) //assert(checkAccount(leafInfo, account))
    assert(true) //assert(checkAsset(leafInfo, token1Info))
    assert(true) //assert(checkTokenRange(token1Info))
    root = addAmount(leafInfo, amount1)

    // add share
    leafInfo = leafInfos[4]
    assert(true) //assert(checkLeafInfo(root, leafInfo))
    assert(true) //assert(checkShareAccount(leafInfo, account))
    assert(true) //assert(checkSharePool(leafInfo, pool))
    root = subAmount(leafInfo, checkedAdd(amount0, amount1))

    return root